---
import Layout from "../layouts/Layout.astro";



// src/pages/insights.astro
interface Props {}

// Insights data array
const insights = [
    {
        category: "RESEARCH REPORT",
        title: "Digital Transformation 2025: Navigating the Next Horizon",
        image: "/company/h.jpg",
        gradient: "from-orange-400 to-pink-600",
        link: "/insights/digital-transformation-2025",
        readTime: "8 min read",
        description: "Explore the key trends shaping digital transformation strategies through 2025 and beyond.",
        topics: ["Digital Transformation", "Strategy"]
    },
    {
        category: "MARKET ANALYSIS",
        title: "The Future of AI: Enterprise Implementation Guide",
        image: "/company/i.jpg",
        gradient: "from-purple-600 to-indigo-700",
        link: "/insights/ai-enterprise-guide",
        readTime: "12 min read",
        description: "A comprehensive guide to implementing AI solutions across enterprise operations.",
        topics: ["AI", "Enterprise"]
    },
    {
        category: "RESEARCH REPORT",
        title: "Only 20% of businesses are ready for quantum computing. Are you?",
        image: "/company/c.jpg",
        gradient: "from-blue-500 to-cyan-600",
        link: "/insights/quantum-readiness",
        readTime: "10 min read",
        description: "Assess your organization's quantum readiness and prepare for the quantum revolution.",
        topics: ["Quantum Computing", "Technology"]
    },
    {
        category: "INDUSTRY INSIGHT",
        title: "Accelerating Growth Through Digital Innovation",
        image: "/company/f.jpg",
        gradient: "from-violet-600 to-purple-800",
        link: "/insights/digital-innovation",
        readTime: "15 min read",
        description: "Learn how leading organizations are leveraging digital innovation to drive growth.",
        topics: ["Innovation", "Growth"]
    }
];

// Get unique categories for filter
const categories = [...new Set(insights.map(item => item.category))];

// Get all unique topics
const allTopics = [...new Set(insights.flatMap(item => item.topics))];
---
<Layout title="Insights">
<div class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <div class="relative overflow-hidden bg-gray-900 py-24 mx-auto mt-32 max-w-7xl px-6 sm:mt-40 lg:px-8">
        <div class="absolute inset-0">
            <div class="absolute inset-0 bg-gradient-to-r from-blue-900 to-purple-900 mix-blend-multiply"></div>
            <div class="absolute inset-0 bg-[url('/grid-pattern.svg')] opacity-20"></div>
        </div>
        
        <div class="relative mx-auto max-w-7xl px-6 lg:px-8">
            <div class="max-w-2xl">
                <h1 class="text-4xl font-bold tracking-tight text-white sm:text-6xl">
                    Technology Insights & Research
                </h1>
                <p class="mt-6 text-lg leading-8 text-gray-300">
                    Explore our latest research, analysis, and insights on emerging technologies, digital transformation, and innovation strategies.
                </p>
            </div>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="mx-auto max-w-7xl px-6 lg:px-8 py-8">
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
           

            <!-- Category Filter -->
            <div class="flex gap-2 overflow-x-auto pb-2 w-full sm:w-auto">
                {categories.map(category => (
                    <button class="px-4 py-2 rounded-full text-sm font-medium bg-white border border-gray-200 hover:bg-gray-50 transition-colors">
                        {category}
                    </button>
                ))}
            </div>
        </div>
    </div>

    <!-- Topics Cloud -->
    <div class="mx-auto max-w-7xl px-6 lg:px-8 py-4">
        <div class="flex flex-wrap gap-2">
            {allTopics.map(topic => (
                <span class="px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-700 hover:bg-gray-200 cursor-pointer transition-colors">
                    #{topic}
                </span>
            ))}
        </div>
    </div>

    <!-- Insights Grid -->
    <div class="mx-auto max-w-7xl px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
            {insights.map(insight => (
                <a href={insight.link} class="group relative isolate flex flex-col justify-end overflow-hidden rounded-2xl bg-gray-900 px-8 pb-8 pt-80 sm:pt-48 lg:pt-80">
                    <img src={insight.image} alt={insight.title} class="absolute inset-0 -z-10 h-full w-full object-cover transition duration-300 group-hover:scale-105"/>
                    <div class={`absolute inset-0 -z-10 bg-gradient-to-t ${insight.gradient} opacity-70`}></div>
                    <div class="absolute inset-0 -z-10 ring-1 ring-inset ring-white/10"></div>

                    <div class="flex flex-wrap items-center gap-y-1 overflow-hidden text-sm leading-6 text-gray-300">
                        <div class="flex items-center gap-x-2">
                            <span>{insight.category}</span>
                            <span class="w-1 h-1 rounded-full bg-white/70"></span>
                            <span>{insight.readTime}</span>
                        </div>
                    </div>
                    <h3 class="mt-3 text-lg font-semibold leading-6 text-white">
                        <span class="absolute inset-0"></span>
                        {insight.title}
                    </h3>
                    <p class="mt-3 text-sm text-gray-300 line-clamp-2">{insight.description}</p>
                </a>
            ))}
        </div>
    </div>

    <!-- Newsletter Section -->
    <div class="mx-auto max-w-7xl px-6 lg:px-8 py-16">
        <div class="relative isolate overflow-hidden bg-gray-900 rounded-3xl px-6 py-16 shadow-2xl sm:px-16 md:pt-24 lg:flex lg:gap-x-20 lg:px-24 lg:pt-0">
            <div class="mx-auto max-w-md text-center lg:mx-0 lg:flex-auto lg:py-32 lg:text-left">
                <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">
                    Stay ahead of the curve.
                </br>
                Discover valuable new insights. 
                </h2>
                <p class="mt-6 text-lg leading-8 text-gray-300">
                    Continuously enrich your knowledge by checking back regularly for the latest insights.
                </p>
                
            </div>
        </div>
    </div>
</div>

<script>
    // Client-side search functionality
    const searchInput = document.querySelector('input[type="search"]');
    const insightCards = document.querySelectorAll('.insight-card');
    
    searchInput?.addEventListener('input', (e) => {
        const searchTerm = (e.target as HTMLInputElement).value.toLowerCase();
        
        insightCards.forEach(card => {
            const title = card.querySelector('h3')?.textContent?.toLowerCase() || '';
            const description = card.querySelector('p')?.textContent?.toLowerCase() || '';
            
            if (title.includes(searchTerm) || description.includes(searchTerm)) {
                (card as HTMLElement).style.display = 'block';
            } else {
                (card as HTMLElement).style.display = 'none';
            }
        });
    });

    // Category filter functionality
    const categoryButtons = document.querySelectorAll('.category-button');
    
    categoryButtons.forEach(button => {
        button.addEventListener('click', () => {
            const category = button.textContent;
            
            insightCards.forEach(card => {
                const cardCategory = card.getAttribute('data-category');
                if (category === 'All' || cardCategory === category) {
                    (card as HTMLElement).style.display = 'block';
                } else {
                    (card as HTMLElement).style.display = 'none';
                }
            });
        });
    });
</script>
</Layout>