---
import Layout from "../layouts/Layout.astro";

// src/pages/about.astro
import { Image } from 'astro:assets';

const stats = [
    { number: "50+", label: "Enterprise Clients" },
    { number: "3", label: "Countries" },
    { number: "100+", label: "Projects Delivered" },
    { number: "95%", label: "Client Satisfaction" }
];

const leadership = [
    {
        name: "Mukadaz Taofeeq",
        role: "Founder & CEO",
        linkedin: "https://www.linkedin.com/in/mukadaz-taofeeq?utm_source=share&utm_campaign=share_via&utm_content=profile&utm_medium=android_app",
        bio: "A visionary tech leader with extensive experience in digital transformation and strategic consulting. Mukadaz founded MukadazLabs with the mission to revolutionize technology consulting in Africa and beyond, bringing innovative solutions to enterprises across the continent."
    },
    {
        name: "Raheem Sailat",
        role: "Co-Founder & HealthTech Director",
        linkedin: "https://www.linkedin.com/in/raheem-sailat-omobola-35850519a?utm_source=share&utm_campaign=share_via&utm_content=profile&utm_medium=android_app",
        bio: "A pioneering healthcare technology specialist driving innovation in medical tech solutions. Sailat leads our HealthTech initiatives, bringing cutting-edge technology to healthcare delivery and transforming patient care across Africa."
    },
    {
        name: "Zelalem Gizachew",
        role: "Technical Director & VR Specialist",
        linkedin: "https://www.linkedin.com/in/zelalem-gizachew-28012a230?utm_source=share&utm_campaign=share_via&utm_content=profile&utm_medium=android_app",
        bio: "An accomplished backend developer and VR specialist from Ethiopia, Zelalem leads our virtual reality initiatives and complex backend implementations. His expertise in immersive technologies is helping shape the future of enterprise VR solutions."
    },
    {
        name: "Dawit Tesfaye",
        role: "ML Director & VR Developer",
        linkedin: "https://www.linkedin.com/in/dawit-tesfaye-a11471213?utm_source=share&utm_campaign=share_via&utm_content=profile&utm_medium=android_app",
        bio: "A machine learning expert and VR developer from Ethiopia, Dawit drives our AI initiatives and contributes to groundbreaking VR solutions. His innovative approach to ML and VR integration is revolutionizing how businesses interact with technology."
    }
];

const services = [
    {
        title: "Strategy",
        description: "We help organizations navigate the complex digital landscape with comprehensive strategies that drive growth and innovation.",
        features: [
            "Digital Transformation Roadmap",
            "Technology Strategy",
            "Innovation Planning",
            "Market Entry Strategy"
        ]
    },
    {
        title: "Consulting",
        description: "Our expert consultants provide insights and guidance to help you make informed decisions about your technology investments.",
        features: [
            "Technology Assessment",
            "Process Optimization",
            "Change Management",
            "Risk Management"
        ]
    },
    {
        title: "Implementation",
        description: "We bring your vision to life with precise execution and industry-leading implementation practices.",
        features: [
            "Project Management",
            "System Integration",
            "Quality Assurance",
            "Training & Support"
        ]
    },
    {
        title: "Technology",
        description: "Cutting-edge solutions in emerging technologies that give your business a competitive edge.",
        features: [
            "Virtual Reality Solutions",
            "Machine Learning & AI",
            "HealthTech Innovation",
            "Enterprise Systems"
        ]
    }
];
---

<Layout title="Company">
<div class="bg-white">
    <!-- Hero Section -->
    <div class="relative isolate overflow-hidden bg-gradient-to-b from-indigo-100/20">
        <div class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80">
            <div class="relative left-[calc(50%-11rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 rotate-[30deg] bg-gradient-to-tr from-[#ff80b5] to-[#9089fc] opacity-30 sm:left-[calc(50%-30rem)] sm:w-[72.1875rem]"></div>
        </div>
        
        <div class="mx-auto max-w-7xl px-6 pt-10 pb-24 sm:pb-32 lg:flex lg:px-8 lg:py-40 mt-10">
            <div class="mx-auto max-w-2xl flex-shrink-0 lg:mx-0 lg:max-w-xl lg:pt-8">
               
                <h1 class="mt-10 text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">
                    Pioneering Africa's Digital Future
                </h1>
                <p class="mt-6 text-lg leading-8 text-gray-600">
                    MukadazLabs is a leading strategy and IT consulting company transforming businesses across Africa through innovative technology solutions and strategic guidance.
                </p>
            </div>
        </div>
    </div>

    <!-- Vision & Mission -->
    <div class="relative isolate overflow-hidden bg-white py-16 sm:py-24 lg:py-32">
        <div class="mx-auto max-w-7xl px-6 lg:px-8">
            <div class="grid grid-cols-1 gap-x-8 gap-y-16 lg:grid-cols-2">
                <div>
                    <h2 class="text-3xl font-bold tracking-tight text-gray-900">Our Vision</h2>
                    <p class="mt-4 text-lg text-gray-600">
                        To become Africa's most trusted technology consulting partner, driving digital transformation and innovation across the continent and beyond, while fostering sustainable growth and technological advancement in emerging markets.
                    </p>
                </div>
                <div>
                    <h2 class="text-3xl font-bold tracking-tight text-gray-900">Our Mission</h2>
                    <p class="mt-4 text-lg text-gray-600">
                        To empower organizations with cutting-edge technology solutions and strategic guidance, building Africa's digital ecosystem while delivering exceptional value to our clients through innovation, expertise, and unwavering commitment to excellence.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Services Section -->
    <div class="bg-gray-900 py-24 sm:py-32">
        <div class="mx-auto max-w-7xl px-6 lg:px-8">
            <div class="mx-auto max-w-2xl lg:text-center">
                <h2 class="text-base font-semibold leading-7 text-indigo-400">Our Services</h2>
                <p class="mt-2 text-3xl font-bold tracking-tight text-white sm:text-4xl">
                    Comprehensive Solutions for Digital Excellence
                </p>
            </div>
            <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
                <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-4">
                    {services.map(service => (
                        <div class="flex flex-col">
                            <dt class="text-base font-semibold leading-7 text-white">
                                {service.title}
                            </dt>
                            <dd class="mt-4 flex flex-auto flex-col text-base leading-7 text-gray-300">
                                <p class="flex-auto">{service.description}</p>
                                <ul role="list" class="mt-4 space-y-1">
                                    {service.features.map(feature => (
                                        <li class="flex gap-x-3">
                                            <svg class="h-6 w-5 flex-none text-indigo-400" viewBox="0 0 20 20" fill="currentColor">
                                                <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
                                            </svg>
                                            {feature}
                                        </li>
                                    ))}
                                </ul>
                            </dd>
                        </div>
                    ))}
                </dl>
            </div>
        </div>
    </div>

    <!-- Stats -->
    <div class="bg-white py-24 sm:py-32">
        <div class="mx-auto max-w-7xl px-6 lg:px-8">
            <div class="grid grid-cols-1 gap-x-8 gap-y-16 text-center lg:grid-cols-4">
                {stats.map(stat => (
                    <div class="mx-auto flex max-w-xs flex-col gap-y-4">
                        <dt class="text-5xl font-semibold tracking-tight text-gray-900">{stat.number}</dt>
                        <dd class="text-base leading-7 text-gray-600">{stat.label}</dd>
                    </div>
                ))}
            </div>
        </div>
    </div>

    <!-- Leadership -->
    <div class="bg-gray-900 py-24 sm:py-32">
        <div class="mx-auto max-w-7xl px-6 lg:px-8">
            <div class="mx-auto max-w-2xl lg:mx-0">
                <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">Our Leadership</h2>
                <p class="mt-6 text-lg leading-8 text-gray-300">
                    Meet the visionaries and technical experts driving innovation at MukadazLabs
                </p>
            </div>
            <ul role="list" class="mx-auto mt-20 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-4">
                {leadership.map(person => (
                    <li>
                        
                        <h3 class="mt-6 text-lg font-semibold leading-8 text-white">{person.name}</h3>
                        <p class="text-base leading-7 text-indigo-400">{person.role}</p>
                        <p class="mt-4 text-sm leading-6 text-gray-300">{person.bio}</p>
                        <a href={person.linkedin} target="_blank" rel="noopener" class="mt-6 flex items-center text-sm font-semibold text-indigo-400">
                            <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                            </svg>
                            Connect on LinkedIn
                        </a>
                    </li>
                ))}
            </ul>
        </div>
    </div>

    <!-- Contact Section -->
    <div class="relative isolate bg-white py-24 sm:py-32">
        <div class="mx-auto max-w-7xl px-6 lg:px-8">
            <div class="mx-auto max-w-xl lg:max-w-4xl">
                <h2 class="text-4xl font-bold tracking-tight text-gray-900">Our Location</h2>
                <p class="mt-6 text-lg leading-8 text-gray-600">
                    Headquartered in Lagos, Nigeria, with strategic presence across Africa. Our state-of-the-art office serves as a hub for innovation and collaboration.
                </p>
                <div class="mt-16 grid grid-cols-1 gap-x-8 gap-y-10 lg:grid-cols-2">
                    <div>
                        <h3 class="text-lg font-semibold leading-8 text-gray-900">Lagos Office</h3>
                        <address class="mt-6 space-y-4 text-base leading-7 text-gray-600 not-italic">
                            <p>Lagos Island</p>
                            <p>Lagos, Nigeria</p>
                        </address>
                    </div>
                    <div>
                        <h3 class="text-lg font-semibold leading-8 text-gray-900">Contact</h3>
                        <dl class="mt-6 space-y-4 text-base leading-7 text-gray-600">
                            <div>
                                <dt class="float-left text-gray-400">Email:</dt>
                                <dd class="ml-24">tmukadaz@gmail.com</dd>
                            </div>
                            <div>
                                <dt class="float-left text-gray-400">Phone:</dt>
                                <dd class="ml-24">(+234)8137531208</dd>
                            </div>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Add any custom styles here */
</style>
</Layout>