---
interface Props {
}

const {} = Astro.props;

const insights = [
    {
        category: "RESEARCH REPORT",
        title: "Digital Transformation 2025: Navigating the Next Horizon",
        image: "/company/h.jpg",
        gradient: "from-orange-400 to-pink-600",
        link: "/insights/digital-transformation-2025",
        readTime: "8 min read"
    },
    {
        category: "MARKET ANALYSIS",
        title: "The Future of AI: Enterprise Implementation Guide",
        image: "/company/i.jpg",
        gradient: "from-purple-600 to-indigo-700",
        link: "/insights/ai-enterprise-guide",
        readTime: "12 min read"
    },
    {
        category: "RESEARCH REPORT",
        title: "Only 20% of businesses are ready for quantum computing. Are you?",
        image: "/company/c.jpg",
        gradient: "from-blue-500 to-cyan-600",
        link: "/insights/quantum-readiness",
        readTime: "10 min read"
    },
    {
        category: "INDUSTRY INSIGHT",
        title: "Accelerating Growth Through Digital Innovation",
        image: "/company/f.jpg",
        gradient: "from-violet-600 to-purple-800",
        link: "/insights/digital-innovation",
        readTime: "15 min read"
    }
];
---

<div class="relative">

    <div class="mx-auto max-w-7xl px-6 lg:px-8 mt-16">
        <!-- Section Header -->
        <div class="text-center mb-16">
            <h2 class="text-4xl font-bold tracking-tight bg-gradient-to-r from-gray-900 to-gray-600 bg-clip-text text-transparent sm:text-5xl">
                Latest Insights & Research
            </h2>
            <p class="mt-4 text-lg text-gray-600">
                Discover our latest thinking on technology, business, and digital transformation
            </p>
        </div>

        <!-- Insights Grid -->
        <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-4">
            {insights.map(insight => (
                <a href={insight.link} class="group relative overflow-hidden rounded-2xl transform hover:-translate-y-1 transition-all duration-300 bg-white shadow-xl shadow-gray-200/50">
                    <!-- Background Image -->
                    <div class="aspect-[4/5] overflow-hidden">
                        <img 
                            src={insight.image} 
                            alt={insight.title}
                            class="h-full w-full object-cover object-center group-hover:scale-110 transition-transform duration-500"
                        />
                    </div>
                    
                    <!-- Gradient Overlay -->
                    <div class={`absolute inset-0 bg-gradient-to-b ${insight.gradient} opacity-60 group-hover:opacity-70 transition-opacity duration-300`}></div>
                    
                    <!-- Content -->
                    <div class="absolute inset-0 p-6 flex flex-col justify-end">
                        <div class="transform transition-transform duration-300 group-hover:translate-y-0">
                            <div class="flex items-center space-x-2 mb-3">
                                <span class="text-sm font-semibold text-white/90">
                                    {insight.category}
                                </span>
                                <span class="w-1 h-1 bg-white/80 rounded-full"></span>
                                <span class="text-sm text-white/80">
                                    {insight.readTime}
                                </span>
                            </div>
                            <h3 class="text-xl font-bold text-white leading-tight">
                                {insight.title}
                            </h3>
                        </div>
                        
                        <!-- Hover Arrow -->
                        <div class="mt-4 transform translate-y-8 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300 flex items-center">
                            <span class="text-white flex items-center text-sm font-semibold">
                                Read more
                                <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                                </svg>
                            </span>
                        </div>
                    </div>
                </a>
            ))}
        </div>

        <!-- Mission Statement Section -->
        <div class="mt-24 mb-16 relative">
            <div class="absolute inset-0 flex items-center" aria-hidden="true">
                <div class="w-full border-t border-gray-200"></div>
            </div>
            <div class="relative flex justify-center">
                <span class="bg-white px-6 text-base font-semibold leading-7 text-gray-600">Our Commitment</span>
            </div>
        </div>

        <div class="text-center max-w-3xl mx-auto">
            <p class="text-2xl font-light leading-relaxed text-gray-600">
                Every day, we embrace change and create value for all our stakeholders around the world.
            </p>
            <div class="mt-8 flex justify-center gap-x-6">
                <a href="/company" class="rounded-full px-8 py-3 text-sm font-semibold text-white shadow-sm bg-black hover:bg-gray-800 transition-colors duration-200">
                    Learn about our mission
                </a>
            </div>
        </div>
    </div>
</div>